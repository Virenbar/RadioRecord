{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>nuxt/renovate-config-nuxt",
    "schedule:monthly"
  ],
  "packageRules": [
    {
      "groupName": "nuxt core",
      "groupSlug": "nuxt",
      "matchPackageNames": [
        "nuxt",
        "nuxt3"
      ],
      "matchPackagePatterns": [
        "^@nuxt/"
      ]
    }
  ],
  "assigneesFromCodeOwners": true
}